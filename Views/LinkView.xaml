<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodels="clr-namespace:Pileolinks.ViewModels"
             x:Class="Pileolinks.LinkView"
             Title="{Binding Name}"
             BackgroundColor="White"
             x:DataType="viewmodels:ItemViewModel">
    <ContentPage.Resources>
        <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
    </ContentPage.Resources>

    <StackLayout>
        <Label Text="{Binding Name}"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
               IsVisible="{Binding NoItem, Mode=OneWay, Converter={StaticResource InvertedBoolConverter}}"/>
        <Label Text="Select a directory in the flyout to see the details here."
               VerticalOptions="Center"
               HorizontalOptions="Center"
               IsVisible="{Binding NoItem, Mode=OneWay}" />
    </StackLayout>
</ContentPage>